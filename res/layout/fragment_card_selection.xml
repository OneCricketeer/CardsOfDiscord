<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    tools:context="edu.rosehulman.csse.cardsofdiscord.CardSelectionFragment">


    <ImageButton
        android:id="@+id/quit_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:background="@null"
        android:src="@drawable/ic_close_delete" />

    <TextView
        android:id="@+id/black_card_text"
        style="@style/WhiteText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="-10dp"
        android:gravity="center_horizontal"

        android:text="@string/black_card_text"
        android:textSize="18sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14">
        
    </android.support.v4.view.ViewPager>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:id="@+id/player_scores_scroller"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:divider="@drawable/list_spacer"
            android:orientation="horizontal"
            android:showDividers="middle"

            />
    </HorizontalScrollView>


</LinearLayout>
